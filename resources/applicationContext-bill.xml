<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd
		">  
	<!-- Action -->
	<bean id="billAction" class="pygman.invoice.invoice.web.BillAction" scope="prototype">
		<property name="billEbi" ref="billEbi"/>
	</bean>

	<!-- Ebi -->
	<bean id="billEbi" class="pygman.invoice.invoice.business.ebo.BillEbo">
		<property name="billDao" ref="billDao"/>
	</bean>

	<!-- Dao -->
	<bean id="billDao" class="pygman.invoice.invoice.dao.impl.BillImpl">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
</beans>
