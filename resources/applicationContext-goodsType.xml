<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd
		">  
	<!-- Action -->
	<bean id="goodsTypeAction" class="pygman.invoice.invoice.web.GoodsTypeAction" scope="prototype">
		<property name="goodsTypeEbi" ref="goodsTypeEbi"/>
	</bean>

	<!-- Ebi -->
	<bean id="goodsTypeEbi" class="pygman.invoice.invoice.business.ebo.GoodsTypeEbo">
		<property name="goodsTypeDao" ref="goodsTypeDao"/>
	</bean>

	<!-- Dao -->
	<bean id="goodsTypeDao" class="pygman.invoice.invoice.dao.impl.GoodsTypeImpl">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
</beans>
